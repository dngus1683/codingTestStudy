// 쉬운 계단 수
// 45656이란 수를 보자.
// 이 수는 인접한 모든 자리의 차이가 1이다. 이런 수를 계단 수라고 한다.
// N이 주어질 때, 길이가 N인 계단 수가 총 몇 개 있는지 구해보자. 0으로 시작하는 수는 계단수가 아니다.
// 첫째 줄에 정답을 1,000,000,000으로 나눈 나머지를 출력한다.


// 내 답안1
#include <iostream>
#include <cstring>

#define MAX_N 101

using namespace std;

int a[MAX_N][10];

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(0);
    
    int N;
    
    cin >> N;
    
    a[1][0] = 0;
    for(int i=1; i<10; i++)
    {
        a[1][i] = 1;
    }
    
    for(int i=2; i<=N; i++)
    {
        int tmp[10];
        memcpy(&tmp, &a[i-1], sizeof(a[i-1]));
        
        a[i][0] = a[i-1][1];
        a[i][9] = a[i-1][8];
        for(int j=1; j<9; j++)
        {
            a[i][j] = tmp[j-1]+tmp[j+1];
        }
    }
    
    int sum = 0;
    for(int i=0; i<10; i++)
        sum += a[N][i];
    
    cout << sum%1000000000 << '\n';
}
